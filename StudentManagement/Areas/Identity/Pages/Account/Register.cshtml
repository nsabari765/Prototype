@page
@using StudentManagement.Areas.Identity.Pages.Account;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>@ViewData["Title"]</h1>
            <h2>Create a new Student account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Input.FirstName" class="fs-6"><i class="far fa-smile"></i> First Name</label>
            <div class="form-floating">
                <input type="text" asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <label asp-for="Input.LastName" class="fs-6"><i class="far fa-smile"></i> Last Name</label>
            <div class="form-floating">
                <input type="text" asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <label asp-for="Input.Email" class="fs-6"><i class="fas fa-mail-bulk"></i> Email</label>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <label asp-for="Input.Password" class="fs-6"><i class="fas fa-user-lock"></i> Password</label>
            <div class="form-floating input-group">
                <input asp-for="Input.Password" id="password" class="form-control" autocomplete="new-password" aria-required="true" />
                <div class="input-group-append">
                    <span class="input-group-text eye-icon h-100" id="togglePassword">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            <label asp-for="Input.ConfirmPassword" class="fs-6"><i class="fas fa-user-lock"></i> Confirm Password</label>
            <div class="form-floating input-group">
                <input asp-for="Input.ConfirmPassword" id="confirm_password" class="form-control" autocomplete="new-password" aria-required="true" />
                <div class="input-group-append">
                    <span class="input-group-text eye-icon h-100" id="toggleConfirmPassword">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
            </div>
            <div class="form-floating">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" disabled class="form-control" aria-required="true" style="display:none">
                    <option value="0">Select Role</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div><br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary"><i class="fa fa-registered"></i> Register</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="~/js/Registration/Registration.js"></script>

