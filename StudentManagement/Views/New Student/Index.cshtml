@model Student
@{
    ViewData["Title"] = "Add Or Update Student";
}

<div class="container-fluid mt-3">
    <h1></h1>
    <div class="card">
        <div class="card-body">
            <div class="row mb-3 bg-black text-white border border-dark rounded-3 p-3 d-flex justify-content-center">
                <div class="col-md-3">
                    <div class="col-sm-10 ">
                        <img src="/Images/OldMan.png"
                             class="img-fluid p-2"
                             alt="Image description" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="col-sm-10 pt-5">
                        <p class="lead" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
                            <i>
                                Join hands with us <br /> let's paint the world with our ambitions...
                            </i>
                        </p>
                    </div>
                </div>
            </div>
            <form id="registrationForm" method="post" enctype="multipart/form-data" asp-controller="Student" asp-action="Add">
                <div class="card-body ">
                    <div class="row mb-3">
                        <div class="col-md-3 col-lg-6">
                            <label for="name" asp-for="Name" class="form-label">Full Name</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Id" type="hidden">
                                <input type="text" asp-for="Name" class="form-control" id="name" name="name" placeholder="Enter your full name" >
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-6">
                            <label for="name" asp-for="RollNumber" class="form-label">Roll Number</label>
                            <div class="col-sm-10">
                                <input type="number" asp-for="RollNumber" maxlength="10" class="form-control" name="RollNumber" placeholder="Enter your Roll Number">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 col-lg-6">
                            <label for="email" asp-for="DOB" class="form-label">DOB</label>
                            <div class="col-sm-10">
                                <input type="date" asp-for="DOB" class="form-control" name="DOB">
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-6">
                            <label for="email" asp-for="Phone" class="form-label">Phone Number</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Phone" maxlength="12" class="form-control" name="Phone" placeholder="Enter your PhoneNumber">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 col-lg-6">
                            <label for="email" asp-for="Email" class="form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" asp-for="Email" class="form-control" id="email" name="email" placeholder="Enter your email" >
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-6">
                            <label for="email" asp-for="Gender" class="form-label">Gender</label>
                            <div class="col-sm-10">
                                <select class="form-select" asp-for="Gender" aria-label="Default select example">
                                    <option value="0">Select</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 col-lg-6">
                            <label for="email" asp-for="Address" class="form-label">Address</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" asp-for="Address" name="Address" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-6">
                            <label for="email" asp-for="Department" class="form-label">Department</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Department" class="form-control" id="email" name="Department" placeholder="Enter your Department">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3 col-lg-6">
                            <label for="file" asp-for="File" class="form-label">Upload</label>
                            <div class="col-sm-10">
                                <input type="file" asp-for="File" class="form-control" name="file" placeholder="Upload Your File">
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-6">
                            <div class="col-sm-10">
                                @if(Model.Stu_Image != null)
                                {
                                    <img src="/uploading/@Model.Stu_Image" alt="StudentImage" class="img-fluid mx-auto d-block rounded" />
                                }
                            </div>
                        </div>
                    </div>
                    <button type="submit" asp-controller="Student" asp-action="Add" class="btn btn-primary">Save</button>
                </div>
            </form>
    
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="~/js/Login/Login.js"></script>
